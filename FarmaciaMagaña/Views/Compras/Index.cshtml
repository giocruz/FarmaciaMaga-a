
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-10">
        <h2>Registro de compras</h2>
    </div>
    <div class="col-sm-2">
        <img src="~/media/logo/FarmaciaLogo.png" width="150" />
    </div>
</div>

<div class="row"><span></span></div>

<div class="row">

    <div class="col-lg-3">
        
    </div>

    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-heading">Proveedor</div>
            <div class="panel-body">
                <select class="form-control">
                    <option>Seleccionar proveedor...</option>
                </select>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-heading">Folio</div>
            <div class="panel-body">
                00001
            </div>
        </div>
    </div>
    

    <div class="row">
        <div class="col-lg-3">
            <div class="panel panel-default">
                <div class="panel-heading">Fecha</div>
                <div class="panel-body">
                    DD/MM/AAAA
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    
    <div class="col-lg-3">
        <label for="dropdownProducto">Producto:</label>
        <select id="dropdownProducto" class="form-control">
            <option>Seleccionar producto.</option>
        </select>
    </div>
    <div class="col-lg-3">
        <label for="cantidadProducto">Cantidad:</label>
        <input type="text" class="form-control" id="cantidadProducto"/>
    </div>
    <div class="col-lg-3">
        <br />
        <input type="button" class="btn bg-success" value="Agregar producto(s)" id="btnAgregar" />
    </div>
    <div class="col-lg-3">

    </div>
    
</div>
<br /><br />

<div class="row">

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripción</th>
                <th>Cant.</th>
                <th>$ Unit.</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Ampicilina 500 mg Cápsula</td>
