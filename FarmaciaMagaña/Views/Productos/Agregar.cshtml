
@{
    ViewBag.Title = "Nuevo Producto";
}

<div class="jumbotron">
    <h3>AGREGAR PRODUCTO</h3>
</div>

<div class="row">

    <form class="form-horizontal">
        <fieldset>
            <legend>Agregar nuevo producto</legend>
            
            <div class="form-group">
                <label for="inputID" class="col-lg-2 control-label">ID</label>
                <div class="col-lg-10">
                    <input class="form-control" id="inputID" placeholder="Código" type="text" />
                </div> 
            </div>

            <div class="form-group">
                <label for="inputNombre" class="col-lg-2 control-label">Nombre</label> 
                <div class="col-lg-10">
                    <input class="form-control" id="inputNombre" placeholder="Nombre del medicamento" type="text" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputDesc" class="col-lg-2 control-label">Descripción</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" id="inputDesc"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="inputCosto" class="col-lg-2 control-label">Costo (Compra)</label>
                <div class="col-lg-10">
                    <input class="form-control" id="inputCosto" placeholder="$0.00" type="text" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputPrecio" class="col-lg-2 control-label">Precio (Venta)</label>
                <div class="col-lg-10">
                    
                    <input class="form-control" id="inputPrecio" placeholder="$0.00" type="text" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputCantidad" class="col-lg-2 control-label">Cantidad</label>
                <div class="col-lg-10">
                    <input class="form-control" id="inputCantidad" placeholder="0" type="number" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputLab" class="col-lg-2 control-label">Laboratorio</label>
                <div class="col-lg-10">
                    <input class="form-control" id="inputLab" placeholder="Farmacéutica" type="text" />
                </div>
            </div>

            <div class="form-group">
                <label for="comboTipo" class="col-lg-2 control-label">Categoría</label>
                <div class="col-lg-10">
                    <select class="form-control" id="comboTipo">
                        <option>Analgésico</option>
                        <option>Antiinflamatorio</option>
                        <option>Antibiótico</option>
                        <option>Estomacales</option>
                        <option>Antigripal</option>
                        <option>Vitaminas</option>
                        <option>Varios</option>

                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                </div>
            </div>
        </fieldset>
    </form>

</div>

